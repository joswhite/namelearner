{
  "compilerOptions": {
    "baseUrl": "./src/client",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "angular",
      "angular-mocks",
      "node"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "temp",
    "src/setup",
    "src/server"
  ]
}
