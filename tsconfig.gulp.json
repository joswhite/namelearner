{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "files": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "temp"
  ]
}